


<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <strong><h1 style="text-align: center">Edit <%= vehicle.name %> </h1></strong>
            <div style="width: 30%; margin: 25px auto">
                <form action="/vehicles/<%= vehicle._id %>/?_method=PUT" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="Vehicle[year]" value="<%=vehicle.year%>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="Vehicle[make]" value="<%=vehicle.make%>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="Vehicle[model]" value="<%=vehicle.model%>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="Vehicle[engine]" value="<%=vehicle.engine%>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="Vehicle[price]" value="<%=vehicle.price%>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="Vehicle[sellprice]" value="<%=vehicle.sellprice%>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="Vehicle[vin]" value="<%=vehicle.vin%>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="Vehicle[miles]" value="<%=vehicle.miles%>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="Vehicle[color]" value="<%=vehicle.color%>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="Vehicle[description]" value="<%=vehicle.description%>">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block" type="submit">Submit Changes</button>
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="Vehicle[image]" value="<%=vehicle.image%>">
                    </div>
                    
                </form>
                <a href="/index">Go Back</a>
            </div>
            
    </div>
</div>

<%- include("../partials/footer") %>